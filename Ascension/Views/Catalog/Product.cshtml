@model Product

@{
    ViewBag.Title = Model.Name;
    Layout = "_Layout";
}

@Model.Name<br>
@foreach (var image in Model.Images)
{
    <img style='width:150px; height:150px;' src="data:image;base64,@Convert.ToBase64String(image.Bytes)"/><br>
}
@foreach (var specificationOption in Model.SpecificationOptions)
{
    @specificationOption.Specification.Name<text>  :  </text>@specificationOption.Name<br>
}

