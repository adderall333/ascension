@model IEnumerable<Models.Product>

@foreach (var product in Model)
{
    <a asp-controller="Catalog" asp-action="Product" asp-route-id="@product.Id">@product.Name</a><br>
    if (product.Images.Any())
    {
        <img style='width:150px; height:150px;' src="data:image;base64,@Convert.ToBase64String(product.Images.First().Bytes)"/><br>
    }
}